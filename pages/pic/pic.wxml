<!-- pic.wxml -->
<view class='wallpaper  {{SkinStyle}}'>
    <!-- <view class='title' style='margin-top:20px;'>
    每图
    </view> -->
    <view wx-if='{{OneStyle ==="one"}}'>
        <view class='wallpaperList  {{SkinStyle}}' wx:for="{{wallpaper}}" wx:key="index">
            <image src='{{item.urls}}' mode="widthFix" data-index="{{item.views}}" data-id='{{item.objectId}}' bindtap='previewImg' data-src="{{item.urls}}"></image>
            <view class="tool">
                <i-icon type="like_fill" size="28" color='{{item.likes !="0"?"red":"white"}}' id="{{item.objectId}}" style="margin-right:10px;margin-left:10px;" bindtap='likeThis' />
                <i-tag><i-icon type="browse" />{{item.views}}</i-tag>
                <i-tag type="border" style="margin-right:5px;margin-left:5px;">{{item.type}}</i-tag>
            </view>
        </view>
    </view>
    <view wx-if='{{OneStyle ==="tow"}}'>
        <view class="gallery">
            <view class="item" wx:for="{{wallpaper}}" wx:key="{{index}}">
                <image src='{{item.urls}}' mode="widthFix" data-index="{{item.views}}" data-id='{{item.objectId}}' bindtap='previewImg' data-src="{{item.urls}}" />
            </view>
        </view>
    </view>
    <view class="section section_gap" wx-if='{{OneStyle ==="Landscape"}}'>
        <scroll-view class="scroll-view_H" scroll-x style="width: 100%;height:100%; white-space: nowrap;" scroll-with-animation="true"  scroll-left="350" lower-threshold='2100' bindscrolltolower="vertical">
            <view  wx:for="{{wallpaper}}" wx:key="{{index}}" style='width: 100%;height:100%; display: inline-block;text-align:center;transition: all 0.3s linear;'>
                <image src='{{item.urls}}'  data-index="{{item.views}}" style='height:560px;margin-top:20px;border:4px solid grey; border-radius: 5px;  box-shadow: 3px 3px 5px #f1f1f1; ' data-id='{{item.objectId}}'  bindtap='previewImg' data-src="{{item.urls}}" />
                 <view>
                 <i-tag><i-icon type="browse" />{{item.views}}</i-tag>
                <i-tag type="border" style="margin-right:5px;margin-left:5px;">{{item.type}}</i-tag>
                </view>
            </view>
        </scroll-view>
    </view>
    <!-- 加载提示 -->
    <block wx:if="{{isloading}}">
        <view class="weui-loadmore">
            <view class="weui-loading"></view>
            <view class="weui-loadmore__tips">正在加载</view>
        </view>
    </block>
    <!-- 加载完所有数据 -->
    <block wx:if="{{isReachEnd}}">
        <view>
            <view>暂无更多了</view>
        </view>
    </block>
    <view class="container">
        <i-spin fix size="large" fix wx:if="{{ spinShow }}"></i-spin>
    </view>
    <i-toast id="toast" />
</view>