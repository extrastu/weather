.img {
    width: 100%;
    height: 100%;
    text-align: center;
    margin: 0 auto;
}

.img image {
    width: 90%;
    height: 100%;
    border-radius: 15px;
}

.download, .author {
    margin-bottom: 20px;
    height: 50px;
    line-height: 50px;
    width: 98%;
    background: grey;
    color: white;
    border-radius: 15px;
    margin: 0 auto;
    margin-top: 30px;
    border: 1px solid #222;
    box-shadow: 5px 5px 5px 5px pink;
}

.author {
    margin-top: 10%;
}

.message {
    width: 100%;
    height: 330px;
    position: relative;
    top: -50px;
    background: #fff;
    border-radius: 30px;
    overflow: hidden;
}
.scroll-view-item_H{
	height: 200rpx;
	border:1px solid #222;
}
.bc_green{
	background: green;
}
.bc_red{
	background: red;
}
.bc_yellow{
	background: yellow;
}
.bc_blue{
	background: blue;
}

.scroll-view_H{
  width: 100%;
  white-space: nowrap;
}
.scroll-view-item_H{
  display: inline-block;
  border-radius: 10px;
  text-align: center;
  width: 50%;
  height: 50%;
  margin: 10px 10px;
  overflow: hidden;
}