.img {
    width: 100%;
    height: 100%;
    text-align: center;
    margin: 0 auto;
}

.img image {
    width: 90%;
    height: 100%;
    border-radius: 15px;
}

.download, .author {
    margin-bottom: 20px;
    height: 50px;
    line-height: 50px;
    width: 90%;
    color: white;
    border-radius: 15px;
    margin: 0 auto;
    margin-top: 10px;
    border: 1px solid #222;
    box-shadow: 5px 5px 5px 5px pink;
    background: rgb(30, 50, 230);
    background: -moz-linear-gradient(30deg, rgb(30, 50, 230) 30%, rgb(90, 140, 250) 70%);
    background: -webkit-linear-gradient(30deg, rgb(30, 50, 230) 30%, rgb(90, 140, 250) 70%);
    background: -o-linear-gradient(30deg, rgb(30, 50, 230) 30%, rgb(90, 140, 250) 70%);
    background: -ms-linear-gradient(30deg, rgb(30, 50, 230) 30%, rgb(90, 140, 250) 70%);
    background: linear-gradient(120deg, rgb(30, 50, 230) 30%, rgb(90, 140, 250) 70%);
}

.author {
    margin-top: 10%;
}

.message {
    width: 100%;
    height: 330px;
    position: relative;
    top: -50px;
    background: #fff;
    border-radius: 30px;
    overflow: hidden;
}

.scroll-view-item_H {
    height: 200rpx;
}

.bc_green {
    background: green;
}

.bc_red {
    background: red;
}

.bc_yellow {
    background: yellow;
}

.bc_blue {
    background: blue;
}

.scroll-view_H {
    width: 100%;
    white-space: nowrap;
}

.scroll-view-item_H {
    display: inline-block;
    border-radius: 10px;
    text-align: center;
    width: 50%;
    height: 50%;
    margin: 10px 10px;
    overflow: hidden;
}
.title{
	margin-left: 20px;
	font-size: 24px;
	font-weight: 800;
}

.scroll-view_H{
  width: 100%;
  white-space: nowrap;
}
.scroll-view-item_H,.Illustrations{
  display: inline-block;
  width: 300px;
  height: 50px;
  border-radius: 10px;
  text-align: center;
  line-height: 50px;
  margin: 10px 10px;
  /* box-shadow: 5px 5px 5px 5px pink; */
  overflow: hidden;
}
.Illustrations{
	width: 300px;
	height: 120px;
	position: relative;
}
.v_info{
	position: absolute;
	bottom: 0px;
	height: 40px;
	width:100%;
	color:#fff;
	font-weight: 800;
	line-height: 40px;
	text-align: left;
	padding-left: 15px;
}