<!--pages/search/search.wxml-->
<view class='page'>
    <nav-bar navbar-data='{{nvabarData}}'></nav-bar>
    <view style='margin-top: {{height}}px;background:pink;height:{{dh}}px;padding-top:10px;'>
        <i-panel title="基础用法">
            <i-input value="{{ value1 }}" i-class='search' left mode="wrapped" maxlength='-1' placeholder="暂时只支持英文搜索" bind:blur='intoRes' />
        </i-panel>
        <view class='searchBody'>
            <view class="section section_gap">
                <scroll-view class="scroll-view_H" scroll-x style="width: 100%;height:100%;" scroll-with-animation="true">
                    <view class="scroll-view-item_H Illustrations" style='height:{{dh-200}}px'>
                        <view class='unsplash_type'>最新</view>
                        <view class='unsplash_body'>
                            <scroll-view scroll-y style="height:{{dh-220}}px;" scroll-with-animation enable-back-to-top bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
                                <view class="gallery">
                                    <view class="photo" style='margin-bottom:1px;text-align:center;' wx:for="{{ photoArr }}" wx:key="{{index}}" wx:for-item="photo" wx:for-index="idx">
                                        <image-loader default-image='../../images/zwt.png' mode='widthFix' original-image='{{ photo.urls.regular}}' width="100%" height="200rpx" data-src="{{photo.urls.regular}}" data-id='{{photo.id}}' bindtap='infoPage' />
                                    </view>
                                </view>
                            </scroll-view>
                        </view>
                    </view>
                    <view class="scroll-view-item_H Illustrations" style='height:{{dh-200}}px'>
                        <view class='unsplash_type'>分类</view>
                        <view class='unsplash_body'>
                            <scroll-view scroll-y style="height:{{dh-220}}px;" scroll-with-animation enable-back-to-top>
                                <view class='unsplash_body_item' wx:for='{{listArr}}' data-type='{{item}}' bindtap='searchThis' wx:key="{{index}}">
                                    {{item}}
                                </view>
                            </scroll-view>
                        </view>
                    </view>
                </scroll-view>
            </view>
        </view>
    </view>
    <i-spin size="large" fix wx:if="{{ spinShow }}"></i-spin>
    <i-toast id="toast" />
</view>