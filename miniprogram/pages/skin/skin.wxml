<!--pages/skin/skin.wxml-->

<nav-bar navbar-data='{{nvabarData}}'></nav-bar>
<view style='margin-top: {{height}}px;'>
    <view class="weui-flex__item">
        <text class='title'>皮肤</text>
        <view class="section section_gap">
            <scroll-view class="scroll-view_H" scroll-x style="width: 100%;height:100%;" scroll-with-animation="true">
                <view class="scroll-view-item_H Illustrations " style='background:{{item.color}}' wx:for='{{skin}}' wx:key="*this" bindtap='intoThis' data-type="{{item.text}}">
                    <image src="" mode='aspectFill' style='width:100%;height:100%; border-radius:15px;overflow:hidden;'></image>
                    <view class='v_info'>
                        {{item.text}}
                    </view>
                </view>
            </scroll-view>
        </view>
    </view>
</view>
